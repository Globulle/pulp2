@import 'nib'

*
	box-sizing border-box
html
	font-size 16px
body
	font 62.5% Helvetica, sans-serif
	margin 0

#pages
	width 570px
	min-width 320px
	margin 0 auto
	overflow hidden
.page
	position relative
	width 100%
	transition: transform .3s ease-out
.page img
	width 100%
	user-select none
.hotspot
	position absolute
	background-color rgba(0, 255, 204, .5)

@media (max-width: 570px)
	#pages
		width 100%