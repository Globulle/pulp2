/* M A S K S */
.mask
	position absolute
	background-color #fff
	height 0
	opacity 0
	left 0
	right 0
	z-index 999
	transition: height 0s, opacity 0s
#top-mask
	top 0
#bottom-mask
	transform: rotateX(180deg);
	bottom -1px /* To cover up some small clipping that occurs */
